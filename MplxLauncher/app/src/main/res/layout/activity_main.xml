<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="br.com.actia.mplxlauncher.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >
    </android.support.v4.view.ViewPager>

    <android.support.v7.widget.ButtonBarLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/ibt_users"
            android:layout_width="@dimen/button_menu"
            android:layout_height="@dimen/button_menu"
            android:src="@drawable/accounts"
            android:contentDescription=""
            style="@style/Widget.AppCompat.Button"/>

        <ImageButton
            android:id="@+id/ibt_allApps"
            android:layout_width="@dimen/button_menu"
            android:layout_height="@dimen/button_menu"
            android:src="@drawable/apps"
            android:contentDescription=""
            style="@style/Widget.AppCompat.Button"/>

        <ImageButton
            android:id="@+id/ibt_blockApps"
            android:layout_width="@dimen/button_menu"
            android:layout_height="@dimen/button_menu"
            android:src="@drawable/block"
            android:contentDescription=""
            style="@style/Widget.AppCompat.Button"/>

    </android.support.v7.widget.ButtonBarLayout>

</LinearLayout>
