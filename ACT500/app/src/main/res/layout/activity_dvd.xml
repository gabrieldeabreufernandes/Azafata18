<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/dvd_title"
        android:textSize="@dimen/text_size"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="@dimen/intern_btn_size"
            android:layout_height="@dimen/intern_btn_size"
            android:id="@+id/btnDiskEject"
            android:background="@drawable/button_adb"
            android:src="@drawable/ic_eject_white_36dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDvdFile"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/text_size"
            android:padding="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDvdTime"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/text_size"
            android:padding="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="@dimen/intern_btn_size"
            android:layout_height="@dimen/intern_btn_size"
            android:id="@+id/btnReward"
            android:background="@drawable/button_adb"
            android:src="@drawable/ic_skip_previous_white_36dp"/>
        <ImageButton
            android:layout_width="@dimen/intern_btn_size"
            android:layout_height="@dimen/intern_btn_size"
            android:id="@+id/btnPlayPause"
            android:background="@drawable/button_adb"
            android:src="@drawable/ic_play_arrow_white_36dp"/>
        <ImageButton
            android:layout_width="@dimen/intern_btn_size"
            android:layout_height="@dimen/intern_btn_size"
            android:id="@+id/btnForward"
            android:background="@drawable/button_adb"
            android:src="@drawable/ic_skip_next_white_36dp"/>
    </LinearLayout>
</LinearLayout>