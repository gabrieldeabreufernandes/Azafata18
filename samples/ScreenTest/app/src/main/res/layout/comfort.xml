<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        android:text="@string/comfort_title"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:columnCount="3"
        android:rowCount="2"
        android:id="@+id/area_lighting">

        <com.gmail.andersonarmani.screentest.MultipleStateButton
            android:id="@+id/btn_wifi"
            android:layout_width="180px"
            android:layout_height="180px"
            android:background="@drawable/button_levels"
            android:src="@drawable/wifi_g1"/>

        <com.gmail.andersonarmani.screentest.MultipleStateButton
            android:id="@+id/btn_wc"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/button_levels"
            android:src="@drawable/wc_g1"/>

        <com.gmail.andersonarmani.screentest.MultipleStateButton
            android:id="@+id/btn_coffee"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/button_levels"
            android:src="@drawable/coffee_g1"/>

        <com.gmail.andersonarmani.screentest.MultipleStateButton
            android:id="@+id/btn_refrigerator"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/button_levels"
            android:src="@drawable/refrigerator_g4"/>

        <com.gmail.andersonarmani.screentest.MultipleStateButton
            android:id="@+id/btn_wisper"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/button_levels"
            android:src="@drawable/wisper_g3"/>

        <com.gmail.andersonarmani.screentest.MultipleStateButton
            android:id="@+id/btn_rcd"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/button_levels"
            android:src="@drawable/rcd_g1"/>

    </GridLayout>
</LinearLayout>